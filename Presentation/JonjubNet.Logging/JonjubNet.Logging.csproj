<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Target Framework: .NET 10 -->
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    
    <!-- Plataformas soportadas -->
    <SupportedOSPlatform>windows</SupportedOSPlatform>
    <SupportedOSPlatform>linux</SupportedOSPlatform>
    <SupportedOSPlatform>osx</SupportedOSPlatform>
    
    <!-- NuGet Package Properties -->
    <PackageId>JonjubNet.Logging</PackageId>
    <Version>3.0.12</Version>
    <Authors>Onuar Jimenez</Authors>
    <Company>JonjubNet</Company>
    <Description>Biblioteca de logging estructurado para aplicaciones .NET con soporte para m�ltiples sinks (Console, File, HTTP, Elasticsearch, Kafka), funcionalidades avanzadas de correlaci�n y enriquecimiento, y logging autom�tico para operaciones MediatR sin c�digo manual. Optimizado para .NET 10 y C# 13.</Description>
    <PackageTags>logging;structured-logging;serilog;correlation;enrichment;kafka;elasticsearch;net10;csharp13</PackageTags>
    <PackageProjectUrl>https://github.com/jonjubnet/JonjubNet.Logging</PackageProjectUrl>
    <RepositoryUrl>https://github.com/jonjubnet/JonjubNet.Logging</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <Title>JonjubNet.Logging</Title>
    
    <!-- Documentaci�n XML -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn> <!-- Suprimir advertencias de documentaci�n faltante temporalmente -->
    
    <!-- SourceLink para debugging - DESHABILITADO temporalmente por bloqueo de archivos -->
    <PublishRepositoryUrl>false</PublishRepositoryUrl>
    <EmbedUntrackedSources>false</EmbedUntrackedSources>
    <EnableSourceLink>false</EnableSourceLink>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="10.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="10.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="10.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="10.0.0" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="10.0.0" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="10.0.0" />
    <PackageReference Include="Microsoft.Extensions.ObjectPool" Version="10.0.0" />
    <PackageReference Include="MediatR" Version="12.4.1" />
    
    <!-- SourceLink para debugging - COMENTADO temporalmente por bloqueo de archivos -->
    <!-- <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="All"/> -->
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.3.0" />
    <PackageReference Include="Serilog" Version="4.3.0" />
    <PackageReference Include="Serilog.Sinks.Console" Version="6.1.1" />
    <PackageReference Include="Serilog.Sinks.File" Version="7.0.0" />
    <PackageReference Include="Serilog.Sinks.Http" Version="9.2.0" />
    <PackageReference Include="Serilog.Enrichers.Environment" Version="3.0.1" />
    <PackageReference Include="Serilog.Enrichers.Process" Version="3.0.0" />
    <PackageReference Include="Serilog.Enrichers.Thread" Version="4.0.0" />
    <PackageReference Include="Serilog.Formatting.Compact" Version="3.0.0" />
    <PackageReference Include="Confluent.Kafka" Version="2.12.0" />
  </ItemGroup>

  <ItemGroup>
    <!-- Referencias a proyectos internos - NO crear dependencias de paquete NuGet -->
    <!-- PrivateAssets: All evita que se creen dependencias de paquete para proyectos internos -->
    <ProjectReference Include="..\..\Core\JonjubNet.Logging.Application\JonjubNet.Logging.Application.csproj">
      <PrivateAssets>All</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </ProjectReference>
    <ProjectReference Include="..\..\Core\JonjubNet.Logging.Domain\JonjubNet.Logging.Domain.csproj">
      <PrivateAssets>All</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </ProjectReference>
    <ProjectReference Include="..\..\Infrastructure\JonjubNet.Logging.Shared\JonjubNet.Logging.Shared.csproj">
      <PrivateAssets>All</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </ProjectReference>
  </ItemGroup>
  
  <!-- Target para incluir expl�citamente los ensamblados de proyectos internos en lib/ del paquete NuGet -->
  <Target Name="IncludeReferencedAssembliesInPackage" AfterTargets="Build" BeforeTargets="GenerateNuspec">
    <PropertyGroup>
      <_ApplicationDllPath>$(MSBuildProjectDirectory)\..\..\Core\JonjubNet.Logging.Application\bin\$(Configuration)\$(TargetFramework)\JonjubNet.Logging.Application.dll</_ApplicationDllPath>
      <_DomainDllPath>$(MSBuildProjectDirectory)\..\..\Core\JonjubNet.Logging.Domain\bin\$(Configuration)\$(TargetFramework)\JonjubNet.Logging.Domain.dll</_DomainDllPath>
      <_SharedDllPath>$(MSBuildProjectDirectory)\..\..\Infrastructure\JonjubNet.Logging.Shared\bin\$(Configuration)\$(TargetFramework)\JonjubNet.Logging.Shared.dll</_SharedDllPath>
    </PropertyGroup>
    <ItemGroup Condition="Exists('$(_ApplicationDllPath)')">
      <TfmSpecificPackageFile Include="$(_ApplicationDllPath)">
        <PackagePath>lib/$(TargetFramework)/JonjubNet.Logging.Application.dll</PackagePath>
      </TfmSpecificPackageFile>
    </ItemGroup>
    <ItemGroup Condition="Exists('$(_DomainDllPath)')">
      <TfmSpecificPackageFile Include="$(_DomainDllPath)">
        <PackagePath>lib/$(TargetFramework)/JonjubNet.Logging.Domain.dll</PackagePath>
      </TfmSpecificPackageFile>
    </ItemGroup>
    <ItemGroup Condition="Exists('$(_SharedDllPath)')">
      <TfmSpecificPackageFile Include="$(_SharedDllPath)">
        <PackagePath>lib/$(TargetFramework)/JonjubNet.Logging.Shared.dll</PackagePath>
      </TfmSpecificPackageFile>
    </ItemGroup>
  </Target>
  
  <PropertyGroup>
    <TargetsForTfmSpecificContentInPackage>$(TargetsForTfmSpecificContentInPackage);IncludeReferencedAssembliesInPackage</TargetsForTfmSpecificContentInPackage>
  </PropertyGroup>
  

  <ItemGroup>
    <None Include="..\..\README.md" Pack="true" PackagePath="README.md" />
  </ItemGroup>

  <!-- Excluir archivos de ejemplo de la compilaci�n (solo son ejemplos de uso) -->
  <ItemGroup>
    <Compile Remove="Examples\**" />
    <EmbeddedResource Remove="Examples\**" />
  </ItemGroup>

</Project>
